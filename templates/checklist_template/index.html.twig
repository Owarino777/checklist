{% extends 'base.html.twig' %}

{% block title %}ChecklistTemplate index{% endblock %}

{% block body %}
    <h1>ChecklistTemplate index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for checklist_template in checklist_templates %}
            <tr>
                <td>{{ checklist_template.id }}</td>
                <td>{{ checklist_template.title }}</td>
                <td>{{ checklist_template.description }}</td>
                <td>
                    <a href="{{ path('app_checklist_template_show', {'id': checklist_template.id}) }}">show</a>
                    <a href="{{ path('app_checklist_template_edit', {'id': checklist_template.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_checklist_template_new') }}">Create new</a>
{% endblock %}
